        end
    end

    def show_author
        @bb_imp.show_author(@author)
    end

    def show_title
        @bb_imp.show_title(@title)
    end
end

class BridgeBookAuthorTitle < BridgeBook
    def show_author_title
        "#{show_author} 's #{show_title}"
    end
end
 
class BridgeBookTitleAuthor < BridgeBook
